  "dependencies": {
    "@jxa/run": "^1.3.6"
  },
  "devDependencies": {
    "@jxa/global-type": "^1.3.6",
    "@jxa/sdef-to-dts": "^1.3.6",
    "@jxa/types": "^1.3.6",
    "@magicdawn/prettier-config": "^0.0.2",
    "@swc/core": "^1.3.55",
    "@types/fs-extra": "^11.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.16.1",
