    "nyc": "^15.1.0",
    "prettier": "^2.8.8",
    "should": "^13.2.3",
    "typescript": "^5.0.4"
  },
  "packageManager": "pnpm@7.17.0",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
