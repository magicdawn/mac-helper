{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "CommonJS",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "declaration": true,
    "types": ["@jxa/types", "@jxa/global-type", "node", "fs-extra"]
  },
  "ts-node": {
    "swc": true
  }
}
